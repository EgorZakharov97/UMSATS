<% include ../partials/header %>

<!--NEW COMMENT-->

<div class="container" style="width: 50%;">
    <h1>
        Creating comment on <%= item.name %>
    </h1>
    <form method="POST" action="/items/<%= item._id %>/comments" class="border shadow-sm p-3 mb-5 bg-white rounded">
      <div class="form-group">
        <label for="textInput">Add some text</label>
        <textarea rows="4" cols="50" id="textInput" class="form-control" type="text" name="comment[text]" placeholder="Add Comment"></textarea>
      </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="checkBox" required>
        <label class="form-check-label" for="checkBox">Я не пидор</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ../partials/footer %>