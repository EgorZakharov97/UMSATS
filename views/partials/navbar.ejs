<!-- NAVBAR -->

<div data-collapse="none" data-animation="default" data-duration="400" class="navbar-5 w-nav">

        <nav role="navigation" class="nav-menu-2 w-nav-menu">
          <a href="/main" class="nav-link-3 w-nav-link">Home</a>
          <a href="/items" class="nav-link-2 w-nav-link">Items</a>
          <a href="/all-users" class="nav-link-2 w-nav-link">Users</a>
          <% if(user.permissions.canModifyItems) { %> <a href="/items/new" class="nav-link-2 w-nav-link">New</a> <% } %>
        </nav>

        <div class="div-block-20"><a href="/user"><img src="<%= user.picture %>" width="51" data-w-id="80ebdf82-bc62-0388-110d-3be6ce400fe0" alt="" class="image-4"></a><img src="../../../images/delivery-cart.svg" width="59" data-w-id="df295706-4e6d-32f7-480b-ea3c8674c353" alt="" class="image-10"></div>
        <div class="cart">
          <div class="div-block-18">
            <h2 class="heading-5">Cart</h2><a data-w-id="f419285d-e837-56b3-3a34-bc91b5e0b9ac" href="#" class="button-3 w-button">Close</a></div>
          
          
          <% if(user.cart.length > 0){ %>
            <% for(let i = 0; i < user.cart.length; i++) { %>
              <% let record = user.cart[i] %>
              <div class="columns-3 cart-item w-row">
                  <div class="column-8 w-col w-col-6"><img src="../../../../<%= record.itemInfo.image %>" alt="" class="image-9"></div>
                  <div class="column-7 w-col w-col-6">
                    <div class="div-block-17"><form action="/itemManager/deleteFromCart" method="post">
                      <input name="toDelete" type="text" style="display:none;" value="<%=record._id%>">
                      <button class="button button-2 w-button"> Delete</button>
                      </form></div>
                    <h4 class="item-header cart-item"><%= record.itemInfo.name %></h4>
                    <div class="item-category"><%if(record.itemInfo.disposable){%>Quantity: <%=record.itemInfo.quantityTaken%> <%} else {%> ID: <%=record.itemInfo.shortID %> <% } %></div>
                  </div>
                </div>
              <% } %>
              <div class="div-block-24"><a href="/itemManager/checkout" class="button-6 w-button">Checkout</a></div>
          <% } else { %>
            <div class="div-block-24"><p>Your cart is empty</p></div>
          <% } %>
        </div>
      </div>

<!-- END NAVBAR -->